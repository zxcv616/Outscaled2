# Outscaled.GG Security Configuration
# Copy to .env and customize for your environment

# ================================
# CRITICAL SECURITY SETTINGS
# ================================

# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your-secret-key-here-change-in-production

# Environment (development, staging, production)
ENV=development

# ================================
# DATABASE CONFIGURATION
# ================================

# Production PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/outscaled

# Development SQLite (default if not set)
# DATABASE_URL=sqlite:///./outscaled.db

# Connection pooling (PostgreSQL only)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_CONNECT_TIMEOUT=10
DB_STATEMENT_TIMEOUT=30000

# ================================
# REDIS CONFIGURATION (Optional)
# ================================

# Redis for rate limiting and caching
# If not set, falls back to in-memory storage
REDIS_URL=redis://localhost:6379/0

# ================================
# JWT CONFIGURATION
# ================================

# Token expiration times
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ================================
# RATE LIMITING
# ================================

# Rate limiting configuration
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ================================
# PASSWORD SECURITY
# ================================

# Password requirements
MIN_PASSWORD_LENGTH=12
PASSWORD_ENTROPY_BITS=50

# ================================
# OAUTH CONFIGURATION
# ================================

# Google OAuth (optional)
# Get from: https://console.developers.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Discord OAuth (optional)
# Get from: https://discord.com/developers/applications
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_REDIRECT_URI=http://localhost:3000/auth/discord/callback

# ================================
# CORS CONFIGURATION
# ================================

# Allowed origins for CORS (production should be specific)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ================================
# MONITORING & LOGGING
# ================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Sentry DSN for error tracking (optional)
SENTRY_DSN=your-sentry-dsn

# ================================
# EMAIL CONFIGURATION (Future)
# ================================

# Email settings for password reset, etc.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@outscaled.gg

# ================================
# WEBHOOKS & INTEGRATIONS
# ================================

# Webhook URL for notifications
WEBHOOK_URL=https://your-webhook-url.com

# Discord webhook for monitoring (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook